
<%= form_for(@user, html: { class: "ui form", role: "form" }, url: signup_path, remote: true) do |f| %>
  <div class="field">
    <%= f.label :username, "Username" %>
    <%= f.text_field :username, placeholder: "Username" %>
  </div>
  <div class="field">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password, placeholder: "Password" %>
  </div>
  <%= f.button "Sign up", class: "ui button" %>
<% end %>
